<?xml version="1.0" encoding="UTF-8"?>
<!-- http://developer.android.com/resource/tutorials/views/hello-formstuff.html -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<TextView android:text="Which module are you taking? (Semester 1)" android:layout_width="fill_parent"
android:layout_height="wrap_content" android:textSize="18dp" android:textStyle="bold" 
android:textColor="#ffffff" android:gravity="center_horizontal" android:padding="5dip"/>
<TextView android:id="@+id/thirdyeartextsem1" android:text="Choose between 30 and 50 credits." android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center_horizontal" android:textStyle="italic"/>
<View android:background="#ffffff" android:layout_width="fill_parent" android:layout_height="1dip" />	

<CheckBox android:id="@+id/commprogbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Commercial Programming" />

<CheckBox android:id="@+id/evocompbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Evolutionary Computation" />

<CheckBox android:id="@+id/hcibox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Human Computer Interaction" />

<CheckBox android:id="@+id/indstudbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Individual Study 1" />

<CheckBox android:id="@+id/irbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Intelligent Robotics" />

<CheckBox android:id="@+id/networksbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Networks and Distributed Systems" />

<CheckBox android:id="@+id/neuralbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Neural Computation" />

<CheckBox android:id="@+id/osbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Operating Systems with C/C++" />

<Button android:id="@+id/submitchoice1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18dp"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
android:text="Next" />

</LinearLayout>

</ScrollView>
