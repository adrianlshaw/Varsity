<?xml version="1.0" encoding="UTF-8"?>
<!-- http://developer.android.com/resource/tutorials/views/hello-formstuff.html -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<TextView android:text="Which module are you taking? (Semester 2)" android:layout_width="fill_parent"
android:layout_height="wrap_content" android:textSize="18dp" android:textStyle="bold" 
android:textColor="#ffffff" android:gravity="center_horizontal" android:padding="5dip"/>
<View android:background="#ffffff" android:layout_width="fill_parent" android:layout_height="1dip" />	
<TextView android:id="@+id/thirdyeartextsem1" android:text="Each module below is worth 10 credits." android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="center_horizontal" android:textStyle="italic"/>

<CheckBox android:id="@+id/compilersbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Compilers and Languages" />

<CheckBox android:id="@+id/db2box"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Databases 2" />

<CheckBox android:id="@+id/g2box"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Graphics 2" />

<CheckBox android:id="@+id/indstud2box"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Individual Study 2" />

<CheckBox android:id="@+id/idabox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Intelligent Data Analysis" />

<CheckBox android:id="@+id/nlpabox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Natural Language Processing and Applications" />

<CheckBox android:id="@+id/nidbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Nature Inspired Design" />

<CheckBox android:id="@+id/philobox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Philosophy of Cognitive Sciences" />

<CheckBox android:id="@+id/planningbox"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Planning" />

<CheckBox android:id="@+id/principles"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Principles of Programming Languages" />

<Button android:id="@+id/submitchoice2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18dp"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
android:text="Finish" />

</LinearLayout>

</ScrollView>