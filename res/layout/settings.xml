	www.softwarepassion.com/android-series-custom-listview-items-and-adapters/
	-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:padding="6dip">

	<TextView 	android:text="Settings" 
				android:textSize="32dip" 
				android:textStyle="bold"
				android:gravity="center_horizontal"
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" />
	<View android:background="#ffffff" android:layout_width="fill_parent" android:layout_height="1dip" />


	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:orientation="horizontal">
	<TextView android:text="Anti-aliasing"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:gravity="left"
			  android:textSize="18dip" />
	<CheckBox android:id="@+id/antialiasingbox"
			  android:layout_width="wrap_content"
			  android:padding="6dip"
			  android:layout_height="wrap_content"
			  android:gravity="right"
			   />
	
	</LinearLayout>
	
	<TextView android:text="GPS Power Usage"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textSize="18dip" />
			  
	<RadioGroup	android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
		<RadioButton 	android:id="@+id/settingshighpowerradio"
						android:text="High"		
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						/>				
		<RadioButton 	android:id="@+id/settingsmediumpowerradio"
						android:text="Medium"		
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						/>
		<RadioButton 	android:id="@+id/settingslowpowerradio"
						android:text="Low"		
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						/>

	</RadioGroup>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
		     		android:gravity="bottom">
		<Button android:id="@+id/submitsettings" 
				android:text="Apply" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
	
		/>
	</LinearLayout>
</LinearLayout>